<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/about_us"
                app:titleTextColor="@color/white" />


        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appBarLayout"
            android:layout_margin="@dimen/margin_medium"
            android:padding="@dimen/padding_medium"

            >

            <ImageView
                android:id="@+id/login_logo"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_launcher" />

            <ProgressBar
                android:id="@+id/imageProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/desc"
            android:layout_below="@id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_very_small"
            android:gravity="center"
            android:padding="@dimen/padding_medium"
            android:text="This app iis designed to submit \n assignments via mobile phone"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/deatilsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc"
            android:layout_margin="@dimen/margin_medium"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">


            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.7"
                    android:contentDescription="icon_email"
                    android:src="@drawable/ic_email_accent_24dp" />
                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:text="admin@cse.nntrr.ac.in"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/background_gray"
                    android:textColorHint="@color/background_gray" />

                <!--<android.support.design.widget.TextInputLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="0.3"-->
                    <!--android:paddingBottom="@dimen/padding_large"-->
                    <!--android:textColorHint="@color/white">-->


                <!--</android.support.design.widget.TextInputLayout>-->
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.7"
                    android:contentDescription="icon_password"
                    android:src="@drawable/ic_computer_black_24dp" />

                <TextView
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:text="www.nntrr.ac.in/cse"
                    android:textColor="@color/white"
                    android:textColorHint="@color/background_gray"
                    android:textScaleX="1.2" />

                <!--<android.support.design.widget.TextInputLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="0.3"-->
                    <!--android:paddingBottom="@dimen/padding_large"-->
                    <!--android:textColorHint="@color/white"-->

                    <!--&gt;-->


                <!--</android.support.design.widget.TextInputLayout>-->
            </LinearLayout>


            <Button
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/button_background"
                android:fontFamily="sans-serif"
                android:padding="@dimen/padding_medium"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textScaleX="1.1"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/forgot_password"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_very_small"
                android:gravity="center"
                android:padding="@dimen/padding_medium"
                android:text="@string/forgot_password"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/layout_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <Button
            android:visibility="gone"
            android:id="@+id/button_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/deatilsLayout"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/button_background"
            android:padding="@dimen/padding_medium"

            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:textScaleX="1.1"
            android:textSize="16dp" />

    </RelativeLayout>

</ScrollView>
